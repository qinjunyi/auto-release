{
  "name": "@resolverjy/auto-release",
  "version": "0.0.1",
  "description": "auto release for everything",
  "main": "/dist/main.js",
  "author": "resolverJY",
  "keywords": [
    "auto",
    "release"
  ],
  "scripts": {
    "dev": "gulp dev",
    "build": "gulp build",
    "release": "node ./build/release.js",
    "lint": "eslint src/**/*.ts --ignore-pattern src/types/*",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "directories": {
    "lib": "lib"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^7.3.3",
    "@types/node": "^16.4.0",
    "@types/semver": "^7.3.8",
    "@typescript-eslint/parser": "^4.30.0",
    "conventional-changelog-cli": "^2.1.1",
    "doctoc": "^2.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-rimraf": "^1.0.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rollup": "^2.59.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "inquirer": "^8.2.0",
    "semver": "^6.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && doctoc README.md -u && git add README.md"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
